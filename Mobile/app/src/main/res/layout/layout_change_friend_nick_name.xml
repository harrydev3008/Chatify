<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_nickname_radius"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:paddingHorizontal="10dp"
                android:background="@drawable/border_bottom">

                <TextView
                    android:id="@+id/tv_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="8dp"
                    android:text="@string/change_friend_nick_name"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/iBtn_dismiss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_baseline_close"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/edt_nick_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/change_friend_nick_name"
                android:textSize="18sp"
                android:paddingVertical="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="?actionBarSize"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/white"
            android:text="@string/save"
            android:textSize="18sp"
            android:textAllCaps="false"
            app:cornerRadius="20dp"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="10dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>